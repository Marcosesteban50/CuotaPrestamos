@model DatosCliente





<div asp-validation-summary="ModelOnly" class="text-danger"></div>


    


<div class="con">

    <h1>CALCULADORA PRESTAMOS</h1>
<form  asp-action="Crear">
    <div class="mb-3">
        <label asp-for="Monto_Del_Prestamo" class="form-label"></label>
        <input type="number" id="Monto_Del_Prestamo" name="Monto_Del_Prestamo" placeholder="Digite El Monto" class="form-control"/>
        
        <span asp-validation-for="Monto_Del_Prestamo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Plazo" class="form-label"></label>
        <input type="number" id="Plazo" name="Plazo" placeholder="Digite Su Plazo" class="form-control"/>
        <span asp-validation-for="Plazo" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="tasa_interes_anual" class="form-label"></label>
        <input type="number" id="tasa_interes_anual" name="tasa_interes_anual" placeholder="Digite El Interes"
                   class="form-control"/>
        
        <span asp-validation-for="tasa_interes_anual" class="text-danger"></span>

    </div>

    
    <div class="divsito">

    <button type="submit" class="btnCalcular" asp-action="TablaAmortizada"><span>Calcular</span></button>
    </div>

    
    
    
    

</form>



</div>





<style>

 h1{
     margin-top:25%;
 }  
 
    .con{
    display:flex;
    justify-content:center;
    align-items:center;
    
    
    }


    .divsito{
        margin-top:30px;
        display:flex;
        justify-content:center;
        align-items:center;
        
    }



    .btnCalcular {
        position: relative;
        width: 50%;
        height: 60px;
        
        border: none;
        background: #1a1e2d;
        text-decoration: none;
        text-transform: uppercase;
        
        font-size: 1.25em;
        font-weight: 500;
        color: ghostwhite;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow:hidden;
        
        
    }



        .btnCalcular span {
            display: inline-block;
            z-index: 2;
            line-height: 1em;
            transition: 0.2s ease-in-out;
        }



        .btnCalcular:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #29313c;
            transform: scaleX(0);
            transition: transform 0.2s ease-in-out;
            transform-origin: left;
        }

        .btnCalcular:hover::before {
            transform: scaleX(1);
            
        }

        .btnCalcular:hover span {
            color: ghostwhite;
            letter-spacing:5px;
            
            
        }



















      

