@model DatosCliente


@{
    ViewData["Title"] = "Calculadora Prestamos";
}





<div asp-validation-summary="ModelOnly" class="text-danger"></div>





<div class="con">

    <h1>CALCULADORA PRESTAMOS</h1>
    <form asp-action="Crear">
        <div class="mb-3">
            <label asp-for="Monto_Del_Prestamo" class="form-label"></label>
            <input type="number" asp-for="Monto_Del_Prestamo" name="Monto_Del_Prestamo" placeholder="Digite El Monto" class="form-control" />

            <span asp-validation-for="Monto_Del_Prestamo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Plazo" class="form-label"></label>
            <input type="number" asp-for="Plazo" name="Plazo" placeholder="Digite Su Plazo" class="form-control" />
            <span asp-validation-for="Plazo" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="tasa_interes_anual" class="form-label"></label>
            <input type="number" asp-for="tasa_interes_anual" name="tasa_interes_anual" placeholder="Digite El Interes"
                   class="form-control" />


            <span asp-validation-for="tasa_interes_anual" class="text-danger"></span>

        </div>


        <div class="divsito">

            @*<button type="submit" class="btnCalcular" asp-action="TablaAmortizada"><span>Go</span></button>
            *@

            <button type="submit" class="btnCalcular" asp-action="TablaAmortizada">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Visualizar
            </button>

            <button type="submit" class="btnCalcular" asp-action="ImprimirVenta">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                PDF
            </button>

           

            
        </div>


    </form>



</div>





<div class="btnTabla">


    <a class="btnCalcular" asp-action="Crear">

        <span></span>
        <span></span>
        <span></span>
        <span></span>
        Reiniciar
    </a>
</div>












@section Scripts{
    <partial name="_ValidationScriptsPartial" />
   }


